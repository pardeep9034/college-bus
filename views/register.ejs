<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Route Registration Form</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container mt-5">
    <h2 class="text-center">Register for a Bus Route</h2>
    <form id="routeRegistrationForm" action="/register/<%=foundRoute._id%>" method="POST" class="mt-4">

        <input type="hidden" name="route_id" value="<%=foundRoute._id%>">
        <!-- Name Field -->
        <div class="mb-3">
            <label for="name" class="form-label">Full Name</label>
            <input type="text" class="form-control" id="name" name="name" value="<%=user.name%>" required>
        </div>
        <!-- Email Field -->
        <div class="mb-3">
            <label for="email" class="form-label">Email Address</label>
            <input type="email" class="form-control" id="email" name="email" value="<%=user.email%>" required>
        </div>
        <!-- Contact Number Field -->
        <div class="mb-3">
            <label for="contact" class="form-label">Roll no</label>
            <input type="tel" class="form-control" id="contact" name="contact" value="<%=user.roll_no%>" required>
        </div>
        <!-- Route Selection -->
        <div class="mb-3">
            <label for="route" class="form-label">Select Route</label>
            <select class="form-select" id="route" name="stopname" required>
                <option value="" disabled selected>select stop</option>
                <% foundRoute.stops.forEach(function(stop) { %>
                    <option value="<%= stop.stop_name %>"><%= stop.stop_name %></option>
                <% }) %>
                <!-- Add more routes as needed -->
            </select>
        </div>
        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary w-100">Register</button>
    </form>
</div>

<!-- Bootstrap JS and dependencies -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
