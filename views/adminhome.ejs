<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Route</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2>Add New Route</h2>
        <form action="/add-route" method="POST">
            <!-- Route Name -->
            <div class="mb-3">
                <label for="route_name" class="form-label">Route Name</label>
                <input type="text" class="form-control" id="route_name" name="route_name" required>
            </div>

            <!-- Bus Number -->
            <div class="mb-3">
                <label for="bus_number" class="form-label">Bus Number</label>
                <input type="text" class="form-control" id="bus_number" name="bus_number" required>
            </div>

            <!-- Departure Time -->
            <div class="mb-3">
                <label for="departure" class="form-label">Departure Time</label>
                <input type="text" class="form-control" id="departure" name="departure" required>
            </div>

            <!-- Source -->
            <div class="mb-3">
                <label for="source" class="form-label">Source</label>
                <input type="text" class="form-control" id="source" name="source" required>
            </div>

            <!-- Destination -->
            <div class="mb-3">
                <label for="destination" class="form-label">Destination</label>
                <input type="text" class="form-control" id="destination" name="destination" required>
            </div>

            <!-- Driver Name -->
            <div class="mb-3">
                <label for="driver_name" class="form-label">Driver Name</label>
                <input type="text" class="form-control" id="driver_name" name="driver_name" required>
            </div>

            <!-- Driver Contact -->
            <div class="mb-3">
                <label for="driver_contact" class="form-label">Driver Contact</label>
                <input type="text" class="form-control" id="driver_contact" name="driver_contact" required>
            </div>

            <!-- Stops -->
            <div id="stops-container">
                <div class="mb-3">
                    <label for="stop_name" class="form-label">Stop Name</label>
                    <input type="text" class="form-control" id="stop_name" name="stop_name[]" required>
                </div>
                <div class="mb-3">
                    <label for="arrival_time" class="form-label">Arrival Time</label>
                    <input type="text" class="form-control" id="arrival_time" name="arrival_time[]" required>
                </div>
            </div>

            <!-- Button to Add More Stops -->
            <button type="button" class="btn btn-secondary mb-3" id="add-stop">Add Another Stop</button>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary">Add Route</button>
        </form>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Script to Add More Stops -->
    <script>
        document.getElementById('add-stop').addEventListener('click', function() {
            const stopsContainer = document.getElementById('stops-container');
            const newStop = `
                <div class="mb-3">
                    <label for="stop_name" class="form-label">Stop Name</label>
                    <input type="text" class="form-control" name="stop_name[]" required>
                </div>
                <div class="mb-3">
                    <label for="arrival_time" class="form-label">Arrival Time</label>
                    <input type="text" class="form-control" name="arrival_time[]" required>
                </div>
            `;
            stopsContainer.insertAdjacentHTML('beforeend', newStop);
        });
    </script>
</body>
</html>
